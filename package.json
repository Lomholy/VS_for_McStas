{
  "name": "vs-for-mcstas",
  "displayName": "VS_for_McStas",
  "description": "VS_for_McStas is an extension that aims to deliver McStas syntax highlighting, as well as GUI component insertion.",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lomholy/VS_for_McStas"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
       "onView:nodeDependencies"
  ],
  "main": "./out/extension.js",
  "contributes": {
      "configuration": {
      "title": "Component Viewer",
      "properties": {
        "componentViewer.rootPath": {
          "type": "string",
          "default": "",
          "description": "The root path for the Component Viewer tree view."
        }
      }
    },
      "viewsContainers": {
      "activitybar": [
          {
            "id": "McStas-sidebar",
            "title": "McStas",
            "icon": "./media/mcstas.svg"
          }
        ]
      },
    "views": {
      "McStas-sidebar": [
        {
          "id": "Component_viewer",
          "name": "Instr Files",
          "icon":   "./media/mcstas.svg"
        }
      ]
    },
        "commands": [
          {
            "command": "vs-for-mcstas.addcomponent",
            "title": "Insert Component",
            "category": "McStas",
            "icon": {
              "light": "./media/mcstas.svg",
              "dark": "./media/mcstas.svg"
            }
          },
          {
            "command": "mcstas.openCompFile",
            "title": "Open Component File"
        }
        ],
    "menus": {
            "view/item/context": [
                {
                    "command": "mcstas.openCompFile",
                    "group": "navigation"
                }
            ]
        },
    "languages": [{
      "id": "mccode",
      "aliases": ["mccode", "mccode"],
      "extensions": [".comp",".instr"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "mccode",
      "scopeName": "source.mccode",
      "path": "./syntaxes/mccode.tmLanguage.json",
      "embeddedLanguages": {
        "meta.embedded.block.c": "c"
      }
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
