{
  "name": "vs-for-mcstas",
  "displayName": "VS_for_McStas",
  "description": "VS_for_McStas is an extension that aims to deliver McStas syntax highlighting, as well as GUI component insertion.",
  "version": "2.3.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lomholy/VS_for_McStas"
  },
  "publisher": "lomholy",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "title": "Component Viewer",
      "properties": {
        "componentViewer.rootPath": {
          "type": "string",
          "default": "",
          "description": "The root path for the Component Viewer tree view."
        },
        "componentViewer.condaEnv": {
          "type": "string",
          "default": "",
          "description": "The name of the used conda environment"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "McStas-sidebar",
          "title": "McStas",
          "icon": "./media/mcstas.svg"
        }
      ]
    },
    "views": {
      "McStas-sidebar": [
        {
          "id": "Component_viewer",
          "name": "Components",
          "icon": "./media/mcstas.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "vs-for-mcstas.addcomponent",
        "title": "Insert Component",
        "category": "McStas",
        "icon": {
          "light": "./media/mcstas.svg",
          "dark": "./media/mcstas.svg"
        }
      },
      {
        "command": "mcstas.openCompFile",
        "title": "Open Component File",
        "icon": {
          "light": "./media/mcstas.svg",
          "dark": "./media/mcstas.svg"
        }
      },
      {
        "command": "mcstas.createNewInstr",
        "title": "Create a new instrument file",
        "icon": {
          "light": "./media/mcstas.svg",
          "dark": "./media/mcstas.svg"
        }
      },
      {
        "command": "mcstas.mcrun",
        "title": "Run Instrument",
        "icon": {
          "light": "./media/mcstas.svg",
          "dark": "./media/mcstas.svg"
        }
      },
      {
        "command": "mcstas.mcdisplay",
        "title": "Display Instrument",
        "icon": {
          "light": "./media/mcstas.svg",
          "dark": "./media/mcstas.svg"
        }
      },
      {
        "command": "mcstas.mcplot",
        "title": "Plot Data",
        "icon": {
          "light": "./media/mcstas.svg",
          "dark": "./media/mcstas.svg"
        }
      },
      {
        "command": "mcstas.launchMcstasTerminal",
        "title": "McStas for Windows"
      },
      {
        "command": "mcstas.launchCondaWMcstas",
        "title": "McStas for Mac"
      },
      {
        "command": "mcstas.chooseMcStasResourceFolder",
        "title": "Set McStas Folder"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "mcstas.openCompFile",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "mcstas.createNewInstr",
          "when": "view == Component_viewer",
          "group": "dot_group"
        },
        {
          "command": "mcstas.mcrun",
          "when": "view == Component_viewer",
          "group": "dot_group"
        },
        {
          "command": "mcstas.mcdisplay",
          "when": "view == Component_viewer",
          "group": "dot_group"
        },
        {
          "command": "mcstas.mcplot",
          "when": "view == Component_viewer",
          "group": "dot_group"
        },
        {
          "command": "mcstas.chooseMcStasResourceFolder",
          "when": "view == Component_viewer",
          "group": "dot_group"
        }
      ]
    },
    "languages": [
      {
        "id": "mccode",
        "aliases": [
          "mccode",
          "mccode"
        ],
        "extensions": [
          ".comp",
          ".instr"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mccode",
        "scopeName": "source.mccode",
        "path": "./syntaxes/mccode.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.c": "c"
        }
      }
    ],
    "documentFormatting": [
      {
        "language": "mlang"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.46",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
